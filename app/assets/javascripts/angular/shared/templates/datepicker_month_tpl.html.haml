%table{"aria-activedescendant" => "{{activeDateId}}", "aria-labelledby" => "{{uniqueId}}-title", :role => "grid"}
  %thead
    %tr
      %th
        %button.btn.btn-white.btn-sm.pull-left.no-border{"ng-click" => "move(-1)", :tabindex => "-1", :type => "button"}
          %i.fa.fa-chevron-left
      %th
        %button.btn.btn-white.btn-sm{"aria-atomic" => "true", "aria-live" => "assertive", :id => "{{uniqueId}}-title", "ng-click" => "toggleMode()", :role => "heading", :style => "width:100%;", :tabindex => "-1", :type => "button"}
          %strong
            {{title}}
      %th
        %button.btn.btn-white.btn-sm.pull-right.no-border{"ng-click" => "move(1)", :tabindex => "-1", :type => "button"}
          %i.fa.fa-chevron-right
  %tbody
    %tr{"ng-repeat" => "row in rows track by $index"}
      %td.text-center{"aria-disabled" => "{{!!dt.disabled}}", :id => "{{dt.uid}}", "ng-repeat" => "dt in row track by dt.date", :role => "gridcell"}
        %button.btn.btn-white{"ng-class" => "{'btn-info': dt.selected, active: isActive(dt)}", "ng-click" => "select(dt.date)", "ng-disabled" => "dt.disabled", :style => "width:100%;", :tabindex => "-1", :type => "button"}
          %span{"ng-class" => "{'text-info': dt.current}"} {{dt.label}}
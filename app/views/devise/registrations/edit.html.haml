%center
  #signup-box.signup-box.visible.widget-box.no-border.registration-edit-box
    .widget-body
      .widget-main

        %h4.header.green.lighter.bigger
          %i.ace-icon.fa.fa-users.blue
          Change Password

        = form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }) do |f|
          = render :partial => '/devise/shared/errors', locals: {model: resource}
          .form-group
            %span.block.input-icon.input-icon-right
              = f.password_field :current_password, autofocus: true, autocomplete: 'off', :class => 'form-control', :placeholder => 'Current Password'
              = fa_icon :lock, class: 'ace-icon'
          .form-group
            %span.block.input-icon.input-icon-right
              = f.password_field :password, autocomplete: 'off', :class => 'form-control', :placeholder => 'New Password'
              = fa_icon :lock, class: 'ace-icon'
          .form-group
            %span.block.input-icon.input-icon-right
              = f.password_field :password_confirmation, autocomplete: 'off', :class => 'form-control', :placeholder => 'Confirm Password'
              = fa_icon :retweet, class: 'ace-icon'

          .space-24
          .clearfix
            = f.button 'Reset', type: 'reset', class: 'width-30 pull-left btn btn-sm'
            = f.submit 'Change password', class: 'width-65 pull-right btn btn-sm btn-success'

      .toolbar.center
        = link_to "Back", root_path, class: 'back-to-login-link'



#signup-box.signup-box.visible.widget-box.no-border
  .widget-body
    .widget-main

      %h4.header.green.lighter.bigger
        %i.ace-icon.fa.fa-users.blue
        New User Registration

      .space-6

      %p Enter your details to begin:

      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render :partial => '/devise/shared/errors', locals: {model: resource}
        .form-group
          %span.block.input-icon.input-icon-right
            = f.email_field :email, autofocus: true, :class => 'form-control', :placeholder => 'Email'
            = fa_icon :envelope, class: 'ace-icon'
        .form-group
          %span.block.input-icon.input-icon-right
            = f.text_field :name, :class => 'form-control', :placeholder => 'Name'
            = fa_icon :user, class: 'ace-icon'
        .form-group
          %span.block.input-icon.input-icon-right
            = f.text_field :company, :class => 'form-control', :placeholder => 'company'
            = fa_icon :building, class: 'ace-icon'
        .form-group
          %span.block.input-icon.input-icon-right
            = f.password_field :password, autocomplete: 'off', :class => 'form-control', :placeholder => 'Password'
            = fa_icon :lock, class: 'ace-icon'
        .form-group
          %span.block.input-icon.input-icon-right
            = f.password_field :password_confirmation, autocomplete: 'off', :class => 'form-control', :placeholder => 'Confirm Password'
            = fa_icon :retweet, class: 'ace-icon'

        .space-24
        .clearfix
          = f.button 'Reset', type: 'reset', class: 'width-30 pull-left btn btn-sm'
          = f.submit 'Sign up', class: 'width-65 pull-right btn btn-sm btn-success'

    .toolbar.center
      = render 'devise/shared/links'

